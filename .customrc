
# See https://stackoverflow.com/questions/18880024/start-ssh-agent-on-login
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

# Make forward-search work with C-s in the given terminal.
stty stop undef

alias gpu="git stash; git pull --rebase; git stash pop; git stash drop;"
DIR="$(dirname "$0")"

export PATH="$PATH:`yarn global bin`"
source $DIR/.aliasrc

if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
        source /etc/profile.d/vte.sh
fi

if [ -z "$SSH_AUTH_SOCK" ] ; then
  eval `ssh-agent -s`
  ssh-add
fi

export PATH=$PATH:/home/johan/.gem/ruby/2.5.0/bin
export SSH_AUTH_SOCK=/run/user/1000/keyring/ssh

source ~/.dotfiles/.aliasrc
